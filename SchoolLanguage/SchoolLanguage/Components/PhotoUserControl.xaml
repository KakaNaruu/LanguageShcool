<UserControl x:Class="SchoolLanguage.Components.PhotoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolLanguage.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <StackPanel>
            <StackPanel>
                <Image Height="250" Source="{Binding PhotoByte}"></Image>
            </StackPanel>
            <StackPanel>
                <Button x:Name="MainBtn" Click="MainBtn_Click">Сделать главным</Button>
                <Button x:Name="Delete" Click="Delete_Click">Удалить</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
