<Window x:Class="SchoolLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolLanguage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="333*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="177*"/>
        </Grid.RowDefinitions>
            <Image Source="\Resurses\Smeshariki.png"></Image>
            <TextBlock FontSize="20" Grid.Column="1" Foreground="White">Смешарики.Новый сезон</TextBlock>
        <StackPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button x:Name="QTb" Width="120" >Назад</Button>
            <Button x:Name="WTb" Width="120" >Вперед</Button>
        </StackPanel>
    </Grid>
</Window>
